http://www.mulesoft.org/schema/mule/ee/core http://www.mulesoft.org/schema/mule/ee/core/current/mule-ee.xsd">

			<flow name="get:\artists:xx-music-factory-api-config">
        <set-variable value="artists-main::impl-get-artists" doc:name="currentFlow" doc:id="31985fa3-5685-4b7d-895b-381f6a3c6115" variableName="currentFlow"/>
		<flow-ref doc:name="impl-get-artists" doc:id="09078a5a-7972-4791-baab-babc822e7ec7" name="impl-get-artists"/>
    </flow>
	<flow name="post:\artists:application\json:xx-music-factory-api-config">
        <set-variable value="artists-main::impl-add-artists" doc:name="currentFlow" doc:id="9a3d527f-e275-4460-bdea-33c978feb0f2" variableName="currentFlow"/>
		<flow-ref doc:name="impl-add-artists" doc:id="edb8bd64-4e8b-4b59-9fd9-acc2535bce3e" name="impl-add-artists"/>
    </flow>
	<flow name="patch:\artists\(artistId):application\json:xx-music-factory-api-config">
        <set-variable value="artists-main::impl-update-artist-urls" doc:name="currentFlow" doc:id="52914585-fe1a-449e-80f9-fd711869d781" variableName="currentFlow"/>
		<flow-ref doc:name="impl-update-artist-urls" doc:id="63f6ef62-9d4f-40e7-b589-d6b1e2f44d64" name="impl-update-artist-urls" />
		<ee:transform xmlns:ee="http://www.mulesoft.org/schema/mule/ee/core">
            <ee:variables>
                <ee:set-variable variableName="artistId">attributes.uriParams.'artistId'</ee:set-variable>
            </ee:variables>
        </ee:transform>
        <ee:transform xmlns:ee="http://www.mulesoft.org/schema/mule/ee/core" xsi:schemaLocation="http://www.mulesoft.org/schema/mule/ee/core http://www.mulesoft.org/schema/mule/ee/core/current/mule-ee.xsd">
            <ee:message>
                <ee:set-payload><![CDATA[%dw 2.0
output application/json
---
{
  statusCode: 201,
  message: "SUCCESS",
  bioUrl: "https://last.fm/music/The Beatles/+wiki",
  recordsUpdated: 3
}]]></ee:set-payload>
            </ee:message>
        </ee:transform>
    </flow>
	<flow name="get:\artists\(artistId):xx-music-factory-api-config">
        <ee:transform xmlns:ee="http://www.mulesoft.org/schema/mule/ee/core">
            <ee:variables>
                <ee:set-variable variableName="artistId">attributes.uriParams.'artistId'</ee:set-variable>
            </ee:variables>
        </ee:transform>
        <ee:transform xmlns:ee="http://www.mulesoft.org/schema/mule/ee/core" xsi:schemaLocation="http://www.mulesoft.org/schema/mule/ee/core http://www.mulesoft.org/schema/mule/ee/core/current/mule-ee.xsd">
            <ee:message>
                <ee:set-payload><![CDATA[%dw 2.0
output application/json
---
{
  statusCode: 200,
  message: "SUCCESSFUL",
  artist: {
    groupName: "Grateful Dead",
    firstName: "Garcia",
    lastName: "Gerry",
    dateOfBirth: "1948-01-07"
  }
}]]></ee:set-payload>
            </ee:message>
        </ee:transform>
    </flow>
	<flow name="put:\artists\(artistId):application\json:xx-music-factory-api-config">
        <ee:transform xmlns:ee="http://www.mulesoft.org/schema/mule/ee/core">
            <ee:variables>
                <ee:set-variable variableName="artistId">attributes.uriParams.'artistId'</ee:set-variable>
            </ee:variables>
        </ee:transform>
        <ee:transform xmlns:ee="http://www.mulesoft.org/schema/mule/ee/core" xsi:schemaLocation="http://www.mulesoft.org/schema/mule/ee/core http://www.mulesoft.org/schema/mule/ee/core/current/mule-ee.xsd">
            <ee:message>
                <ee:set-payload><![CDATA[%dw 2.0
output application/json
---
{
  statusCode: 200,
  message: "The artist has been updated."
}]]></ee:set-payload>
            </ee:message>
        </ee:transform>
    </flow>
	<flow name="get:\artists\(artistId)\songs:xx-music-factory-api-config">
        <ee:transform xmlns:ee="http://www.mulesoft.org/schema/mule/ee/core">
            <ee:variables>
                <ee:set-variable variableName="artistId">attributes.uriParams.'artistId'</ee:set-variable>
            </ee:variables>
        </ee:transform>
        <ee:transform xmlns:ee="http://www.mulesoft.org/schema/mule/ee/core" xsi:schemaLocation="http://www.mulesoft.org/schema/mule/ee/core http://www.mulesoft.org/schema/mule/ee/core/current/mule-ee.xsd">
            <ee:message>
                <ee:set-payload><![CDATA[%dw 2.0
